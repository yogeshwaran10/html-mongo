<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
</head>
<body>
    <form class="container" method="post" action="/">
        <div class="from-group">
            <input class="form-control" name="Name" placeholder="Enter your Name :">
        </div>
        <div class="from-group">
            <input class="form-control" name="Age" placeholder="Enter your Age :">
        </div>
        <div class="from-group">
            <input class="form-control" name="City" placeholder="Enter your City :">
        </div>
        <button>Add to DB.</button>
    </form>
    <table class="table">
        <thead>
          <tr>
            <th scope="col">ID</th>
            <th scope="col">Name</th>
            <th scope="col">Age</th>
            <th scope="col">City</th>
          </tr>
        </thead>
        <tbody>
        <%studentList.forEach(students => {%>
            <tr>
                <th scope="row"><%= students._id %></th>
                <td><%= students.Name %></td>
                <td><%= students.Age %></td>
                <td><%= students.City %></td>
            </tr>
        <%})%>
        </tbody>
      </table>     
</body>
</html>